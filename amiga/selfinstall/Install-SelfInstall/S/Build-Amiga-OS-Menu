  echo "    IF *"*$iconpackinstall*" EQ 1 VAL" >>T:_amigaosoption
  echo "      set iconpackinstall *"0*"" >>T:_amigaosoption
  echo "    ELSE" >>T:_amigaosoption
  echo "      set iconpackinstall *"1*"" >>T:_amigaosoption
  echo "    ENDIF" >>T:_amigaosoption
  echo "  ELSE" >>T:_amigaosoption
